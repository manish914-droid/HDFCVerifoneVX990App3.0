<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/pad_10">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_5"
        android:layout_marginBottom="@dimen/pad_5"
        android:elevation="@dimen/pad_5"
        android:paddingStart="@dimen/pad_20"
        android:paddingTop="@dimen/pad_20"
        android:paddingEnd="@dimen/pad_20"
        android:paddingBottom="@dimen/pad_20"
        app:cardCornerRadius="@dimen/pad_5">

        <TextView
            android:id="@+id/report_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_10"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/key_text_size" />

    </androidx.cardview.widget.CardView>

</LinearLayout>