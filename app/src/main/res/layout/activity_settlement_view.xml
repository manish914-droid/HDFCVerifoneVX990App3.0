<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/sub_header_view"
                layout="@layout/sub_header_layout"
                android:visibility="visible" />

            <com.example.customneumorphic.NeumorphCardView
                android:id="@+id/header_cardview"
                app:neumorph_inset="@dimen/pad_10"
                app:neumorph_shadowColorDark="@color/lowerShadow"
                app:neumorph_shadowColorLight="@color/upperShadow"
                app:neumorph_shadowElevation="2dp"

                app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub_header_view"
                app:neumorph_shapeType="flat">

                <LinearLayout
                    android:id="@+id/lv_heading_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/pad_10"
                        android:text="@string/invoice"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/top_shadow" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="@dimen/pad_10"
                        android:text="@string/amount"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/top_shadow" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="@dimen/pad_10"
                        android:text="@string/transaction_type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/top_shadow" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="@dimen/pad_10"
                        android:text="@string/date"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />


                </LinearLayout>

            </com.example.customneumorphic.NeumorphCardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/settlement_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                tools:listitem="@layout/item_settlement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_cardview" />

          <!--  <ImageView
                android:id="@+id/empty_view_placeholder"
                android:layout_width="@dimen/standard_placeholder_size"
                android:layout_height="200dp"
                android:background="@drawable/ic_emptybatch"
                android:contentDescription="@string/app_name"

                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_cardview"
                app:layout_constraintVertical_bias="0.279" />-->

            <com.example.verifonevx990app.vxUtils.BHTextView
                android:id="@+id/batch_emty_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="104dp"
                android:gravity="center"
                android:text="@string/empty_batch"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_regular"
                android:visibility="visible"

                app:fname="bold"
                app:layout_constraintBottom_toBottomOf="parent"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_cardview" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/settlement_batch_btn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/pad_80"
        android:text="@string/settle_batch"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        app:backgroundTint="@color/hdfc_red_color"
        app:elevation="@dimen/pad_8"
        app:icon="@drawable/ic_new_settlement"
        app:iconPadding="@dimen/pad_5"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/colorAccent" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
