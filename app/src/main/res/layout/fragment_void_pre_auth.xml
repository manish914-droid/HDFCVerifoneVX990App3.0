<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/sub_header_view"
        layout="@layout/sub_header_layout"
        android:visibility="visible" />

    <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub_header_view">


                <!--batch no-->
                <com.example.customneumorphic.NeumorphCardView
                    android:id="@+id/batch_crd_view"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_8"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_tv"
                    app:neumorph_inset="@dimen/pad_8"
                    app:neumorph_shadowColorDark="@color/lowerShadow"
                    app:neumorph_shadowColorLight="@color/upperShadow"
                    app:neumorph_shadowElevation="2dp"
                    app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14"
                    app:neumorph_shapeType="flat"
                    app:neumorph_strokeColor="@color/darkgray"
                    app:neumorph_strokeWidth="@dimen/pad_1">

                    <com.example.verifonevx990app.vxUtils.BHEditText
                        android:layout_width="match_parent"
                        android:id="@+id/batch_void_et"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:digits="0123456789"
                        android:focusable="false"
                        android:drawableStart="@drawable/ic_batch_no_img"
                        android:gravity="center"
                        android:hint="@string/enter_batch_number"
                        android:lines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/text_size_regular"
                        app:fname="regular"
                        android:layout_marginTop="@dimen/pad_8"
                        android:layout_marginBottom="@dimen/pad_16"
                        android:ems="10"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="8"
                        android:paddingStart="@dimen/pad_8"
                        android:paddingEnd="@dimen/pad_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title_tv" />
                </com.example.customneumorphic.NeumorphCardView>

                <!--roc-->
                <com.example.customneumorphic.NeumorphCardView
                    android:id="@+id/roc_crd_view"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_tv"
                    app:neumorph_inset="@dimen/pad_8"
                    app:neumorph_shadowColorDark="@color/lowerShadow"
                    app:neumorph_shadowColorLight="@color/upperShadow"
                    app:neumorph_shadowElevation="2dp"
                    app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14"
                    app:neumorph_shapeType="flat">

                    <com.example.verifonevx990app.vxUtils.BHEditText
                        android:layout_width="match_parent"
                        android:id="@+id/roc_void_et"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:digits="0123456789"
                        android:focusable="false"
                        android:drawableStart="@drawable/ic_roc_img"
                        android:gravity="center"
                        android:hint="@string/enter_roc"
                        android:lines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/text_size_regular"
                        app:fname="regular"
                        android:layout_marginTop="@dimen/pad_8"
                        android:layout_marginBottom="@dimen/pad_16"
                        android:ems="10"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="8"
                        android:paddingStart="@dimen/pad_8"
                        android:paddingEnd="@dimen/pad_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title_tv" />
                </com.example.customneumorphic.NeumorphCardView>

                <com.example.customneumorphic.NeumorphButton
                    android:id="@+id/auth_void_btn"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/pad_40"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_16"
                    android:layout_marginEnd="@dimen/pad_40"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xsmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:neumorph_inset="@dimen/pad_14"
                    app:neumorph_lightSource="rightBottom"
                    app:neumorph_shadowColorDark="@color/upperShadow"
                    app:neumorph_shadowColorLight="@color/lowerShadow"
                    app:neumorph_shadowElevation="2dp"
                    android:text="@string/void_pre_auth"
                    app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_20" />

            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
