<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_8"
    android:elevation="@dimen/pad_4"
    app:cardBackgroundColor="@color/item_background_color"
    app:cardCornerRadius="@dimen/pad_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/t_parent_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/edit_ll"
            android:orientation="vertical">


            <TextView
                android:id="@+id/t_field_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/pad_4"
                android:text="ADMIN PASSWORD OF TERMINAL"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_regular" />

            <TextView
                android:id="@+id/t_value_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/pad_4"
                android:text="112222366673623626326"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_regular" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_ll"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="@dimen/pad_8">

            <ImageView
                android:layout_width="@dimen/lock_img_width_height"
                android:layout_height="@dimen/lock_img_width_height"
                android:layout_gravity="center"
                android:src="@drawable/ic_tap"

                />

            <com.example.verifonevx990app.vxUtils.BHTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit"

                android:textSize="@dimen/text_size_small"

                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
