<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/pad_8">

    <com.example.verifonevx990app.vxUtils.BHTextView
        android:id="@+id/transType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/brand_emi_by_access_code"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xregular"
        app:fname="bold" />

    <com.example.verifonevx990app.vxUtils.BHTextView
        android:id="@+id/issuerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_4"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_regular"
        app:fname="bold"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_8"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/productName" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/productNameET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/categoryName" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/categoryNameET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tenure" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/tenureET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/transactionAmount" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/transactionAmountET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discountPercentageLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/discountPercentage" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/discountPercentageET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discountAmountLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/discount_amount" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/discountAmountET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cashBackPercentageLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cashbackPercentage" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/cashBackPercentageET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cashBackAmountLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cashback_amount" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/cashBackAmountET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/emi_amount" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/emiAmountET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_4"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/netPayAmount" />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/netPayAmountET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <!--Buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_16"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exp_date_input_layout">

        <com.example.verifonevx990app.vxUtils.BHButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_8"
            android:layout_weight="1"
            android:background="@drawable/basic_button_bg"
            android:text="@string/cancel"
            android:textColor="@color/white" />


        <com.example.verifonevx990app.vxUtils.BHButton
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_8"
            android:layout_weight="1"
            android:background="@drawable/basic_button_bg"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>