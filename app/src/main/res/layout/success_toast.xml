<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_4"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/pad_8">

    <LinearLayout
        android:id="@+id/custom_toast_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingStart="@dimen/pad_4"
        android:paddingEnd="@dimen/pad_4"
        android:paddingBottom="@dimen/pad_32">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:contentDescription="@string/transaction_approved_successfully"
            android:padding="@dimen/pad_16"
            android:src="@drawable/ic_check" />


        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/txtvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/transaction_approved_successfully"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

