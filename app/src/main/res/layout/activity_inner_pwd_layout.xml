<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pad_8"
        android:background="@color/purple_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prompt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/pad_16"

            android:text="@string/entry_card_password"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/dsp_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/edit_frame"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_larger" />

        <TextView
            android:id="@+id/prompt_no_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/entry_card_password"
            android:textColor="@color/prompt_no_pwd_color"
            android:textSize="@dimen/font_size_small"
            android:visibility="gone" />

        <include layout="@layout/keyboard_update"

            />

    </LinearLayout>


</RelativeLayout>