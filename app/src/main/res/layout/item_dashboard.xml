<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dashboard_item_height"
    android:layout_margin="@dimen/pad_8"
    android:elevation="@dimen/pad_10"

    app:cardBackgroundColor="@color/item_background_color"
    app:cardCornerRadius="@dimen/pad_16">
    <!--app:cardBackgroundColor="#fffde7"    ebe0f4-->
    <LinearLayout
        android:id="@+id/item_parent_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/pad_8"
        android:paddingBottom="@dimen/pad_8">

        <ImageView
            android:id="@+id/item_logo_iv"
            android:layout_width="@dimen/height_size_navigation_item"
            android:layout_height="@dimen/height_size_navigation_item"


            android:contentDescription="@string/app_name"


            />

        <com.example.verifonevx990app.vxUtils.BHTextView
            android:id="@+id/item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/pad_8"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/purple_d"
            android:textSize="@dimen/text_size_xregular"

            android:textStyle="bold"
            app:fname="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
