<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_5"
    android:background="@color/white"
    android:elevation="@dimen/pad_5"
    app:cardCornerRadius="@dimen/pad_5">

    <LinearLayout
        android:id="@+id/brand_emi_master_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_brand_master_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="start"
            android:hint="@string/brand_name"
            android:padding="@dimen/pad_16"
            android:textColor="@color/text_active"
            android:textSize="@dimen/text_size_regular"
            app:drawableEndCompat="@drawable/ic_right_arrow_gray" />

    </LinearLayout>
</androidx.cardview.widget.CardView>