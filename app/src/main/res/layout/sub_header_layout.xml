<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subHeaderView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themeBackground"
    android:paddingStart="@dimen/pad_16"
    android:paddingTop="@dimen/pad_8"
    android:paddingEnd="@dimen/pad_16"
    android:paddingBottom="@dimen/pad_8"

    >

    <com.example.customneumorphic.NeumorphImageButton
        android:id="@+id/back_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/back"
        style="@style/ShapeAppearance.Neumorph.ImageButton"
        android:src="@drawable/ic_back_arrow_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/pad_8"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_image_button"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/header_Image"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="@dimen/pad_8"
            android:scaleType="fitXY"

            android:visibility="visible" />

        <TextView
            android:id="@+id/sub_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/pad_8"
            android:gravity="center"
            android:text="@string/dashboard"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_regular"
            android:textStyle="normal"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>