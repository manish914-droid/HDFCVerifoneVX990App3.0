<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/pad_8">

    <TextView
        android:id="@+id/headerTV"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryTrans"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/pad_16"
        android:text="@string/date_hint"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_regular"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/transactionIV"
        android:layout_width="@dimen/pad_30"
        android:layout_height="@dimen/pad_30"
        android:layout_marginStart="@dimen/pad_16"
        android:layout_marginTop="@dimen/pad_40"
        android:contentDescription="@string/transaction_success"
        android:src="@drawable/circle_with_tick_mark_green"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTV" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/parentSubHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/transactionIV"
        app:layout_constraintTop_toBottomOf="@+id/headerTV">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/sub_headerOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_10"
            android:layout_marginEnd="@dimen/pad_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/smsPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pad_24"
                android:drawablePadding="@dimen/pad_4"
                android:gravity="start|center_vertical"
                android:padding="@dimen/pad_8"
                android:text="@string/sms_pay"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:drawableLeftCompat="@drawable/sms_icon" />

            <TextView
                android:id="@+id/smsPayTransactionAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/pad_60"
                android:drawablePadding="@dimen/pad_4"
                android:gravity="end|center_vertical"
                android:padding="@dimen/pad_8"
                android:text="@string/_500"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/sub_headerTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pad_16"
            android:layout_marginEnd="@dimen/pad_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pad_24"
                android:drawablePadding="@dimen/pad_4"
                android:gravity="start|center_vertical"
                android:padding="@dimen/pad_8"
                android:text="@string/date_hint"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:drawableLeftCompat="@drawable/ic_calendar_today_24_white" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/mobileNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_16"
        android:drawablePadding="@dimen/pad_4"
        android:gravity="end|center_vertical"
        android:padding="@dimen/pad_8"
        android:text="@string/mobilNumberHint"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"
        app:drawableLeftCompat="@drawable/ic_mobile_icon_white"
        app:layout_constraintStart_toEndOf="@+id/transactionIV"
        app:layout_constraintTop_toBottomOf="@+id/parentSubHeader" />

    <Button
        android:id="@+id/getStatusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/pad_16"
        android:backgroundTint="@color/red"
        android:text="@string/getStatus"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parentSubHeader" />

    <View
        android:id="@+id/seprater_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/pad_70"
        android:layout_marginTop="@dimen/pad_8"
        android:layout_marginEnd="@dimen/pad_16"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>