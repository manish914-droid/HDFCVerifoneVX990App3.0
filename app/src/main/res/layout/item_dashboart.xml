<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_parent_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themeBackground"
    android:padding="@dimen/pad_8">

    <com.example.customneumorphic.NeumorphImageButton
        android:id="@+id/item_logo_iv"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="@dimen/dashboard_img_width"
        android:layout_height="@dimen/dashboard_img_height"
        android:layout_gravity="center"
        android:padding="@dimen/pad_20"
        android:src="@drawable/ic_bbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_inset="@dimen/pad_4"
        app:neumorph_lightSource="rightBottom"
        app:neumorph_shadowColorDark="@color/upperShadow"
        app:neumorph_shadowColorLight="@color/lowerShadow"
        app:neumorph_shadowElevation="3dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14" />
