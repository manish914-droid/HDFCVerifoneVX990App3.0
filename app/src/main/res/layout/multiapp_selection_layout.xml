<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.example.verifonevx990app.vxUtils.BHTextView
        android:id="@+id/app_sel_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_16"
        android:layout_marginTop="@dimen/pad_16"
        android:layout_marginBottom="@dimen/pad_8"
        android:text="@string/app_selection"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xregular"
        app:fname="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/apps_Rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_sel_txt"
        android:scrollbars="vertical"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apps_Rv"
        android:layout_margin="@dimen/pad_8">

        <com.example.verifonevx990app.vxUtils.BHButton
            android:id="@+id/cancel_btnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/pad_16"
            android:layout_toStartOf="@+id/ok_btnn"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <com.example.verifonevx990app.vxUtils.BHButton
            android:id="@+id/ok_btnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/key_ok"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>