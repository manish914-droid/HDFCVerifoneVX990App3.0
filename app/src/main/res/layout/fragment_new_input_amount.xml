<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_marginBottom="@dimen/pad_4">

        <include
            android:id="@+id/sub_header_view"
            layout="@layout/sub_header_layout"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.customneumorphic.NeumorphCardView
            android:id="@+id/sale_amt_crdView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_header_view"
            app:neumorph_shadowColorDark="@color/lowerShadow"
            app:neumorph_inset="@dimen/pad_8"
            app:neumorph_shadowColorLight="@color/upperShadow"
            app:neumorph_shadowElevation="4dp"
            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14"
            app:layout_constraintStart_toStartOf="parent"
            app:neumorph_shapeType="basin">

            <com.example.verifonevx990app.vxUtils.BHEditText
                android:id="@+id/saleAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="end"
                android:drawableStart="@drawable/ic_indian_rupee"
                android:inputType="none"
                android:maxLength="12"
                android:maxLines="1"
                android:paddingStart="@dimen/pad_16"
                android:paddingEnd="@dimen/pad_16"
                android:paddingTop="@dimen/pad_8"
                android:paddingBottom="@dimen/pad_8"
                android:hint="@string/enter_amount"
                android:textSize="@dimen/key_text_size"
                android:textColorHint="@color/colorGrey"
                android:textColor="@color/white" />

        </com.example.customneumorphic.NeumorphCardView>


        <com.example.customneumorphic.NeumorphCardView
            android:id="@+id/cash_amt_crdView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sale_amt_crdView"
            app:neumorph_shadowColorDark="@color/lowerShadow"
            app:neumorph_shadowColorLight="@color/upperShadow"
            app:neumorph_inset="@dimen/pad_8"
            app:neumorph_shadowElevation="4dp"
android:visibility="gone"
            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14"

            app:layout_constraintStart_toStartOf="parent"
            app:neumorph_shapeType="flat"

            >

            <com.example.verifonevx990app.vxUtils.BHEditText
                android:id="@+id/cashAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:cursorVisible="false"
                android:ems="9"
                android:focusable="false"
                android:focusableInTouchMode="false"

                android:gravity="end"
                android:inputType="none"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingStart="@dimen/pad_16"
                android:drawableStart="@drawable/ic_indian_rupee"
                android:paddingTop="@dimen/pad_8"
                android:paddingEnd="@dimen/pad_16"
                android:hint="@string/enter_cash_amount"
                android:textSize="@dimen/key_text_size"
                android:paddingBottom="@dimen/pad_8"
                android:textColor="@color/white"
                android:textColorHint="@color/colorGrey"
                />
        </com.example.customneumorphic.NeumorphCardView>


        <com.example.customneumorphic.NeumorphCardView
            android:id="@+id/mob_no_crdView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cash_amt_crdView"
            app:neumorph_shadowColorDark="@color/lowerShadow"
            app:neumorph_shadowColorLight="@color/upperShadow"
            android:visibility="gone"
            app:neumorph_shadowElevation="4dp"

            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14"

            app:layout_constraintStart_toStartOf="parent"
            app:neumorph_shapeType="flat"

            >

            <com.example.verifonevx990app.vxUtils.BHEditText
                android:id="@+id/mobNumbr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_12"
                android:background="@null"
                android:cursorVisible="false"

                android:focusable="false"
                android:focusableInTouchMode="false"

                android:drawableStart="@drawable/ic_mobile_icon"
                android:inputType="none"
                android:maxLength="13"
                android:maxLines="1"
                android:gravity="end"
                android:textColorHint="@color/colorGrey"
                android:textSize="@dimen/key_text_size"
                android:hint="@string/enter_mobile_number"
                android:textColor="@color/white"

                />
        </com.example.customneumorphic.NeumorphCardView>


        <!--Description-->
        <com.example.customneumorphic.NeumorphCardView
            android:id="@+id/descr_crd_view"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           app:neumorph_shadowColorDark="@color/lowerShadow"
            app:neumorph_shadowColorLight="@color/upperShadow"
            android:visibility="gone"
            app:neumorph_shadowElevation="4dp"

            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14"


            app:neumorph_shapeType="flat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mob_no_crdView"
         >

            <com.example.verifonevx990app.vxUtils.BHEditText
                android:id="@+id/description_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_12"
                android:background="@null"
                android:cursorVisible="false"

                android:focusable="false"
                android:focusableInTouchMode="false"

                android:drawableStart="@drawable/ic_mobile_icon"
                android:inputType="none"
                android:maxLength="13"
                android:maxLines="1"
                android:gravity="end"
                android:textColorHint="@color/colorGrey"
                android:textSize="@dimen/key_text_size"
                android:hint="@string/enter_description_optional"
                android:textColor="@color/white"/>
        </com.example.customneumorphic.NeumorphCardView>




        <include
            android:id="@+id/main_keyBoard"
            layout="@layout/new_enter_amount_keyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="52dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

