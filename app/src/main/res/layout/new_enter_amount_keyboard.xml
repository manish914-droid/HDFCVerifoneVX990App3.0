            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.example.customneumorphic.NeumorphButton

                android:id="@+id/keyOK"

                style="@style/Keyboard_Btn_Neumorphic"

                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:padding="@dimen/pad_20"

                android:text="@string/key_ok"

                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:neumorph_inset="@dimen/pad_4"
                app:neumorph_lightSource="rightBottom"
                app:neumorph_shadowColorDark="@color/upperShadow"
                app:neumorph_shadowColorLight="@color/lowerShadow"
