<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="bottom"
    android:orientation="vertical">


    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_4"
        android:background="@drawable/top_shadow"
        android:elevation="@dimen/pad_16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.example.customneumorphic.NeumorphButton
            android:id="@+id/key1"
            style="@style/Keyboard_Btn_Neumorphic"


            android:padding="@dimen/pad_20"
            android:text="@string/key_1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_inset="@dimen/pad_4"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/upperShadow"
            app:neumorph_shadowColorLight="@color/lowerShadow"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14" />


        <com.example.customneumorphic.NeumorphButton
            android:id="@+id/key2"
            style="@style/Keyboard_Btn_Neumorphic"

            android:layout_gravity="center"
            android:padding="@dimen/pad_20"
            android:text="@string/key_2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_inset="@dimen/pad_4"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/upperShadow"
            app:neumorph_shadowColorLight="@color/lowerShadow"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14" />

        <com.example.customneumorphic.NeumorphButton
            android:id="@+id/key3"
            style="@style/Keyboard_Btn_Neumorphic"

            android:layout_gravity="center"
            android:padding="@dimen/pad_20"
            android:text="@string/key_3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_inset="@dimen/pad_4"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/upperShadow"
            app:neumorph_shadowColorLight="@color/lowerShadow"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14" />


        <com.example.customneumorphic.NeumorphButton
            android:id="@+id/keyClr"

            style="@style/Keyboard_Btn_Neumorphic"
            android:layout_gravity="center"

            android:padding="@dimen/pad_20"
            android:text="@string/key_cancel"

            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_inset="@dimen/pad_4"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/upperShadow"
            app:neumorph_shadowColorLight="@color/lowerShadow"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.customneumorphic.NeumorphButton

            android:id="@+id/key4"

            style="@style/Keyboard_Btn_Neumorphic"

            android:layout_gravity="center"

            android:padding="@dimen/pad_20"
            android:text="@string/key_4"

            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
