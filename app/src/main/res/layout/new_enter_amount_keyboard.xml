            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_inset="@dimen/pad_4"
            app:neumorph_lightSource="rightBottom"
            app:neumorph_shadowColorDark="@color/upperShadow"
            app:neumorph_shadowColorLight="@color/lowerShadow"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph_costom_round_corner_14" />


        <com.example.customneumorphic.NeumorphButton

            android:id="@+id/keyDelete"
            style="@style/Keyboard_Btn_Neumorphic"

            android:layout_gravity="center"
            android:padding="@dimen/pad_20"

            android:text="@string/key_delete"

            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
